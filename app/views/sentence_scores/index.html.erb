<p id="notice"><%= notice %></p>

<h1>Sentence Scores</h1>

<table>
  <thead>
    <tr>
      <th>Mcm topic</th>
      <th>Score</th>
      <th>Sentence</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sentence_scores.each do |sentence_score| %>
      <tr>
        <td><%= sentence_score.mcm_topic_id %></td>
        <td><%= sentence_score.score %></td>
        <td><%= sentence_score.sentence %></td>
        <td><%= link_to 'Show', sentence_score %></td>
        <td><%= link_to 'Edit', edit_sentence_score_path(sentence_score) %></td>
        <td><%= link_to 'Destroy', sentence_score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sentence Score', new_sentence_score_path %>
